<%= form_with(model: friends_table) do |form| %>
  <% if friends_table.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(friends_table.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friends_table.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-3">
    <%= form.text_field :first_name, class:"form-control", placeholder:"First Name" %>
  </div>

  <div class="field mb-3">
    <%= form.text_field :last_name, class:"form-control", placeholder:"Last Name" %>
  </div>

  <div class="field mb-3">
    <%= form.text_field :email, class:"form-control", placeholder:"Email" %>
  </div>

  <div class="field mb-3">
    <%= form.text_field :phone, class:"form-control", placeholder:"Phone number" %>
  </div>

  <div class="field mb-3">
    <%= form.text_field :twitter,class:"form-control", placeholder:"Twitter tag" %>
  </div>
  <div class="field mb-3">
    <%= form.number_field :user_id, id: :friends_tables_user_id, class:"form-control", value: current_user.id, type: :hidden %>
  </div>

  <br>
  <div class="actions mb-3">
    <%= form.submit class:"btn btn-primary" %>
  </div>
<% end %>
