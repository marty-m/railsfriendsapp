<div class="card">
  <h5 class="card-header">Sign Up</h5>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group">

        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email" %>
        <br>
      </div>

      <div class="field form-group">

        <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder: "#{
          if @minimum_password_length
            "Password (#{@minimum_password_length} characters minimum)"
            end}" %>

      </div>

      <div class="field form-group">
        <br>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"Re-enter password" %>
        <br>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class:"btn btn-primary" %>
      </div>
      <br>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>


